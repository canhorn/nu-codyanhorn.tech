@using CodyAnhorn.Tech.Shared.Components.Post.ExternalUrl
@using CodyAnhorn.Tech.Shared.Components.Post.Author
@inherits PostBase

<article class="page">
    @if (Post.ExternalUrl.IsNotNullOrWhitespace())
    {
        <ExternalUrl url="@Post.ExternalUrl" />
    }

    @if (Post.Tags is not null)
    {
        <Tags TagList="Post.Tags" />
    }
    <h1 class="page__title heading__h1">@Post.Title</h1>
    <PublishedDate Date="@Post.Date" />

    <RichTextPageContent Body="@Post.Body" />

    @if (Post.MarkdownBody is not null)
    {
        <BlazorMarkdown Markdown="@Post.MarkdownBody" />
    }

    @if (Post.Author is not null)
    {
        <AuthorCard Author="@Post.Author" />
    }
</article>
